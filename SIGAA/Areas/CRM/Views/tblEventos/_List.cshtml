@model IEnumerable<MapiriSoftCRM.Models.tblEvento>

<div class="panel panel-default">
    <div class="panel-heading">
        <strong>Historico de Eventos</strong>
    </div>

    @if (Model.Count() > 0)
    {
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.dtFechaRegistro_dt)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.lTipoEvento_id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Descripcion)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.dtFechaProgramada_dt)
                </th>               
                <th>
                    @Html.DisplayNameFor(model => model.lNotificacion_id)
                </th> 
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.dtFechaRegistro_dt)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.tblTipoEvento.Descripcion)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Descripcion)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.dtFechaProgramada_dt)
                    </td>                    
                    <td>
                        @Html.DisplayFor(modelItem => item.tblNotificacion.Descripcion)
                    </td>
                </tr>
            }
        </table>
    }
    else
    {
        @: <div class="text-muted">&nbsp;No existen eventos registrados.</div>
    }
</div>