                            @Html.DisplayNameFor(model => model.gatbl_CertificadosMateria.dCalificacion)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.gatbl_CertificadosMateria.bHomologado)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.gatbl_CertificadosMateria.sDocumento_adjunto)
                        </th>
                        
                    </tr>
                    @for (int i = 0; i < Model.gatbl_CertificadosMaterias.Count; i++)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => Model.gatbl_CertificadosMaterias[i].gatbl_ProgramasAnaliticos.sMateria_desc)
                            </td>
                            <td>
