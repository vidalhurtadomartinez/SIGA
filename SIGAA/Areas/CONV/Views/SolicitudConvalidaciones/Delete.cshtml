                            @Html.DisplayFor(modelItem => Model.gatbl_DPConvalidaciones[i].TipoPresentacionDocumento.sDescripcion)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => Model.gatbl_DPConvalidaciones[i].lCantidad_nro)
                        </td>

                    </tr>
                }

            </table>
        </div>
        <div role="tabpanel" class="tab-pane" id="Certificados">
            <div>
                <table class="table">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.gatbl_CertificadosMateria.lMateria_id)
