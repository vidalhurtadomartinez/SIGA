                    <th>
                        @Html.DisplayNameFor(model => model.gatbl_DPConvalidacion.lCantidad_nro)
                    </th>

                </tr>
                @for (int i = 0; i < Model.gatbl_DPConvalidaciones.Count; i++)
                {
