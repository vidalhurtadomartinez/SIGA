        <li role="presentation"><a href="#Certificados" aria-controls="profile" role="tab" data-toggle="tab">Certificados de Materia</a></li>
    </ul>

    <!-- Tab panes -->
    <div class="tab-content">
        <div role="tabpanel" class="tab-pane active" id="Documentos">
            <table class="table">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.gatbl_DPConvalidacion.lTipoDocumentoSolicitud_id)
