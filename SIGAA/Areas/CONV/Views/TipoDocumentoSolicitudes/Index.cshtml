@model IEnumerable<SIGAA.Areas.CONV.Models.TipoDocumentoSolicitud>

@{
    ViewBag.Title = "Tipos de Documentos de solicitud";
}

<h2>Tipos de Documentos de solicitud</h2>
@if (FrontUser.TienePermiso(RolesPermisos.CONV_TipoDocumentoSolicitud_CrearNuevo))
{
<p>
    @Html.ActionLink("Crear Nuevo", "Create")
</p> }
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.sDescripcion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.bActivo)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.sDescripcion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.bActivo)
        </td>
        <td>   
            @if (FrontUser.TienePermiso(RolesPermisos.CONV_TipoDocumentoSolicitud_Editar))
            {         
            <a href="@Url.Action("Edit", new { id = item.lTipoDocumentoSolicitud_id })">
                <i class="glyphicon glyphicon-edit" title="Editar"></i>
                <span class="sr-only">Editar</span>
            </a>} 
            @if (FrontUser.TienePermiso(RolesPermisos.CONV_TipoDocumentoSolicitud_VerDetalle))
            { 
            <a href="@Url.Action("Details", new { id = item.lTipoDocumentoSolicitud_id })">
                <i class="glyphicon glyphicon-search" title="Ver"></i>
                <span class="sr-only">Ver</span>
            </a>}
            @if (FrontUser.TienePermiso(RolesPermisos.CONV_TipoDocumentoSolicitud_Eliminar))
            { 
            <a href="@Url.Action("Delete", new { id = item.lTipoDocumentoSolicitud_id })">
                <i class="glyphicon glyphicon-trash" title="Eliminar"></i>
                <span class="sr-only">Eliminar</span>
            </a>}
        </td>
    </tr>
}

</table>
