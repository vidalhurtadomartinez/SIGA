@model IEnumerable<SIGAA.Areas.CONV.Models.OrigenOtraUniversidad>

@{
    ViewBag.Title = "Origen Otras Universidades";
}

<h2>Origen Otras Universidades</h2>

@if (FrontUser.TienePermiso(RolesPermisos.CONV_OrigenOtraUniversidad_CrearNuevo))
{ 
<p>
    @Html.ActionLink("Crear Nuevo", "Create")
</p>}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.sOrigen_fl)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.sDescripcion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.bActivo)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.sOrigen_fl)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.sDescripcion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.bActivo)
        </td>
        <td>
            @if (FrontUser.TienePermiso(RolesPermisos.CONV_OrigenOtraUniversidad_Editar))
            { 
            <a href="@Url.Action("Edit", new { id = item.sOrigen_fl })">
                <i class="glyphicon glyphicon-edit" title="Editar"></i>
                <span class="sr-only">Editar</span>
            </a>}
            @if (FrontUser.TienePermiso(RolesPermisos.CONV_OrigenOtraUniversidad_VerDetalle))
            { 
            <a href="@Url.Action("Details", new { id = item.sOrigen_fl })">
                <i class="glyphicon glyphicon-search" title="Ver"></i>
                <span class="sr-only">Ver</span>
            </a>}
            @if (FrontUser.TienePermiso(RolesPermisos.CONV_OrigenOtraUniversidad_Eliminar))
            {
            <a href="@Url.Action("Delete", new { id = item.sOrigen_fl })">
                <i class="glyphicon glyphicon-trash" title="Eliminar"></i>
                <span class="sr-only">Eliminar</span>
            </a> }
        </td>
    </tr>
}

</table>
