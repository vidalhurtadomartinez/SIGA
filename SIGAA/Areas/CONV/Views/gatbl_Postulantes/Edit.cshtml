@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

<script>
    function onSelectCarrera(e) {
        var dataItem = this.dataItem(e.item);
        $("#secciones_academicas_sca_descripcion").val(dataItem.sca_descripcion);
    }

    $(document).ready(function () {
        $("#lProcedencia_id").change(function () {
            var Pais = $("#lProcedencia_id option:selected").text();
            var PaisID = $("#lProcedencia_id option:selected").val();

            if (PaisID != null && PaisID != undefined && PaisID != '') {
                if (Pais.toUpperCase() != "BOLIVIA")
                    $("#Departamento").hide();
                else
                    $("#Departamento").show();
            }
            else {
                $("#Departamento").show();                
            }

            $("#lNacionalidad_id").val(PaisID);
        });
    });

