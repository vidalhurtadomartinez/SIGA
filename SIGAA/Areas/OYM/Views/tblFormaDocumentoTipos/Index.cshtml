@using SIGAA.Areas.OYM.Helpers
@model IEnumerable<SIGAA.Areas.OYM.Models.tblFormaDocumentoTipo>

@{
    ViewBag.Title = "Tipos de Forma de Documento";
}

<h2>Tipos de Forma de Documento</h2>

<table class="table">
    <tr>
        <th>
            <div class="pull-left">
                @if (FrontUser.TienePermiso(RolesPermisos.OYM_tipoDeFormasDeDocumento_puedeCrearNuevo)) {
                @Html.NoEncodeActionLink("<span class='glyphicon glyphicon-plus'></span>", "Crear Nuevo", "Create", "tblFormaDocumentoTipos", routeValues: null, htmlAttributes: new { @class = "btn btn-primary" })}
            </div>
        </th>
        <th>
            @Html.DisplayNameFor(model => model.sDescripcion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.bActivo)
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td style="width:68px">
                <div class="pull-left" style="width:68px">
                    @if (FrontUser.TienePermiso(RolesPermisos.OYM_tipoDeFormasDeDocumento_puedeEditar)) {
                    @Html.NoEncodeActionLink("<span class='glyphicon glyphicon-pencil'></span>", "Editar", "Edit", "tblFormaDocumentoTipos", routeValues: new { id = item.lFormaDocumentoTipo_id }, htmlAttributes: new { data_modal = "", @class = "glyphicon" })}
                    &nbsp;
                    @if (FrontUser.TienePermiso(RolesPermisos.OYM_tipoDeFormasDeDocumento_puedeVerDetalle)) {
                    @Html.NoEncodeActionLink("<span class='glyphicon glyphicon-search'></span>", "Ver", "Details", "tblFormaDocumentoTipos", routeValues: new { id = item.lFormaDocumentoTipo_id }, htmlAttributes: new { data_modal = "", @class = "glyphicon" })}
                    &nbsp;
                    @if (FrontUser.TienePermiso(RolesPermisos.OYM_tipoDeFormasDeDocumento_puedeEliminar)) {
                    @Html.NoEncodeActionLink("<span class='glyphicon glyphicon-trash'></span>", "Eliminar", "Delete", "tblFormaDocumentoTipos", routeValues: new { id = item.lFormaDocumentoTipo_id }, htmlAttributes: new { data_modal = "", @class = "glyphicon" })}
                </div>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.sDescripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.bActivo)
            </td>
        </tr>
    }

</table>