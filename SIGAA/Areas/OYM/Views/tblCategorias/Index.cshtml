@using SIGAA.Areas.OYM.Helpers
@model IEnumerable<SIGAA.Areas.OYM.Models.tblCategoria>

@{
    ViewBag.Title = "Categorias de Participantes";
}

<h2>Categorias de Participantes</h2>


<table class="table">
    <tr>
        <th>
            <div class="pull-left">
                @Html.NoEncodeActionLink("<span class='glyphicon glyphicon-plus'></span>", "Crear Nuevo", "Create", "tblCategorias", routeValues: null, htmlAttributes: new { @class = "btn btn-primary" })
            </div>
        </th>
        <th>
            @Html.DisplayNameFor(model => model.sDescripcion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.lPrioridad)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.bActivo)
        </th>        
    </tr>

@foreach (var item in Model) {
    <tr>
        <td style="width:68px">
            <div class="pull-left" style="width:68px">
                @if(FrontUser.TienePermiso(RolesPermisos.OYM_categoriaDeParcipante_puedeEditar)){
                @Html.NoEncodeActionLink("<span class='glyphicon glyphicon-pencil'></span>", "Editar", "Edit", "tblCategorias", routeValues: new { id = item.lCategoria_id }, htmlAttributes: new { data_modal = "", @class = "glyphicon" })}
                &nbsp;
                @if(FrontUser.TienePermiso(RolesPermisos.OYM_categoriaDeParcipante_puedeVerDetalle)){
                @Html.NoEncodeActionLink("<span class='glyphicon glyphicon-search'></span>", "Ver", "Details", "tblCategorias", routeValues: new { id = item.lCategoria_id }, htmlAttributes: new { data_modal = "", @class = "glyphicon" })}
                &nbsp;
                @if(FrontUser.TienePermiso(RolesPermisos.OYM_categoriaDeParcipante_puedeEliminar)){
                @Html.NoEncodeActionLink("<span class='glyphicon glyphicon-trash'></span>", "Eliminar", "Delete", "tblCategorias", routeValues: new { id = item.lCategoria_id }, htmlAttributes: new { data_modal = "", @class = "glyphicon" })}
            </div>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.sDescripcion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.lPrioridad)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.bActivo)
        </td>        
    </tr>
}

</table>
