    @foreach (var item in Model)
    {
        <tr>
            <td>
                <div class="pull-left">
                    @*@Html.NoEncodeActionLink("<span class='glyphicon glyphicon-comment'></span>", "Responder", "Responder", "tblSeguimientoFormularios", routeValues: new { id = item.lFormularioProceso_id }, htmlAttributes: new { data_modal = "", @class = "glyphicon" })*@
