        </th>
        <th>
            @Html.DisplayNameFor(model => model.tblFormulario.Titulo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.tblProceso.sNombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.dtFechaRegistro_dt)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.sComentarios)
