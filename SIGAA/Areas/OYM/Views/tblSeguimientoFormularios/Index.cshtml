                    @Html.NoEncodeActionLink("<span class='glyphicon glyphicon-comment'></span>", "Responder", "Responder", "tblSeguimientoFormularios", routeValues: new { id = item.lFormularioProceso_id }, htmlAttributes: new { data_modal = "", @class = "btn btn-primary" })}
                </div>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.tblFormulario.Titulo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.tblProceso.sNombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.dtFechaRegistro_dt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.sComentarios)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.lFormulario_version)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.dtFechaInicio_dt)
