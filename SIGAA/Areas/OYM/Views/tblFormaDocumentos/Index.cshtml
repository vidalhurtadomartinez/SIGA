@using SIGAA.Areas.OYM.Helpers
@model IEnumerable<SIGAA.Areas.OYM.Models.tblFormaDocumento>

@{
    ViewBag.Title = "Formas de Documentos";
}

<h2>Formas de Documentos</h2>

<table class="table">
    <tr>
        <th>
            <div class="pull-left">
                @Html.NoEncodeActionLink("<span class='glyphicon glyphicon-plus'></span>", "Crear Nuevo", "Create", "tblFormaDocumentos", routeValues: null, htmlAttributes: new { @class = "btn btn-primary" })
            </div>
        </th>
        <th>
            @Html.DisplayNameFor(model => model.lFormaDocumentoTipo_id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.sDescripcion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.bActivo)
        </th>        
    </tr>

@foreach (var item in Model) {
    <tr>
        <td style="width:68px">
            <div class="pull-left" style="width:68px">
                @if (FrontUser.TienePermiso(RolesPermisos.OYM_formaDeDocumento_puedeEditar)) {
                @Html.NoEncodeActionLink("<span class='glyphicon glyphicon-pencil'></span>", "Editar", "Edit", "tblFormaDocumentos", routeValues: new { id = item.lFormaDocumento_id }, htmlAttributes: new { data_modal = "", @class = "glyphicon" })}
                &nbsp;
                @if (FrontUser.TienePermiso(RolesPermisos.OYM_formaDeDocumento_puedeVerDetalle)) {
                @Html.NoEncodeActionLink("<span class='glyphicon glyphicon-search'></span>", "Ver", "Details", "tblFormaDocumentos", routeValues: new { id = item.lFormaDocumento_id }, htmlAttributes: new { data_modal = "", @class = "glyphicon" })}
                &nbsp;
                @if (FrontUser.TienePermiso(RolesPermisos.OYM_formaDeDocumento_puedeEliminar)) {
                @Html.NoEncodeActionLink("<span class='glyphicon glyphicon-trash'></span>", "Eliminar", "Delete", "tblFormaDocumentos", routeValues: new { id = item.lFormaDocumento_id }, htmlAttributes: new { data_modal = "", @class = "glyphicon" })}

            </div>

        </td>
        <td>
            @Html.DisplayFor(modelItem => item.tblFormaDocumentoTipos.sDescripcion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.sDescripcion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.bActivo)
        </td>        
    </tr>
}

</table>
