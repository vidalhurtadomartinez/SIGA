@using SIGAA.Areas.OYM.Helpers
@model IEnumerable<SIGAA.Areas.OYM.Models.tblPlantilla>

@{
    ViewBag.Title = "Plantillas";
}

<h2>Plantillas</h2>

<table class="table">
    <tr> 
        <th>
            <div class="pull-left">
                @Html.NoEncodeActionLink("<span class='glyphicon glyphicon-plus'></span>", "Crear Nuevo", "Create", "tblPlantillas", routeValues: null, htmlAttributes: new { @class = "btn btn-primary" })
            </div>
        </th>                   
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Descripcion)
        </th>               
    </tr>

@foreach (var item in Model) {
    <tr> 
        <td style="width:68px">
            <div class="pull-left" style="width:68px">
                @if (FrontUser.TienePermiso(RolesPermisos.OYM_plantillas_puedeEditar)) {
                @Html.NoEncodeActionLink("<span class='glyphicon glyphicon-pencil'></span>", "Edit", "Edit", "tblPlantillas", routeValues: new { id = item.lPlantilla_id }, htmlAttributes: new { data_modal = "", @class = "glyphicon" })}
                &nbsp;  
                @if (FrontUser.TienePermiso(RolesPermisos.OYM_plantillas_puedeVerDetalle)) {
                @Html.NoEncodeActionLink("<span class='glyphicon glyphicon-search'></span>", "Details", "Details", "tblPlantillas", routeValues: new { id = item.lPlantilla_id }, htmlAttributes: new { data_modal = "", @class = "glyphicon" })}
                &nbsp; 
                @if (FrontUser.TienePermiso(RolesPermisos.OYM_plantillas_puedeEliminar)) {
                @Html.NoEncodeActionLink("<span class='glyphicon glyphicon-trash'></span>", "Delete", "Delete", "tblPlantillas", routeValues: new { id = item.lPlantilla_id }, htmlAttributes: new { data_modal = "", @class = "glyphicon" })}
            </div>
        </td>       
        <td>
            @Html.DisplayFor(modelItem => item.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Descripcion)
        </td>              
    </tr>
}

</table>
