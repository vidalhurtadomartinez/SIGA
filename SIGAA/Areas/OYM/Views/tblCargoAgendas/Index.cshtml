@using SIGAA.Areas.OYM.Helpers
@model IEnumerable<SIGAA.Areas.OYM.Models.tblCargoAgenda>

@{
    ViewBag.Title = "Asignacion de Cargos";
}

<h2>Asignacion de Cargos</h2>


<table class="table">
    <tr>
        <th>
            <div class="pull-left">
                @Html.NoEncodeActionLink("<span class='glyphicon glyphicon-plus'></span>", "Crear Nuevo", "Create", "tblCargoAgendas", routeValues: null, htmlAttributes: new { @class = "btn btn-primary" })
            </div>
        </th>
        <th>
            @Html.DisplayNameFor(model => model.agd_codigo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.lCargo_id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.dtFechaInicio_dt)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.dtFechaFinal_dt)
        </th>               
    </tr>

@foreach (var item in Model) {
    <tr>
        <td style="width:68px">
            <div class="pull-left" style="width:68px">
                @Html.NoEncodeActionLink("<span class='glyphicon glyphicon-pencil'></span>", "Editar", "Edit", "tblCargoAgendas", routeValues: new { id = item.lCargoAgenda_id }, htmlAttributes: new { data_modal = "", @class = "glyphicon" })
                &nbsp;
                @Html.NoEncodeActionLink("<span class='glyphicon glyphicon-search'></span>", "Ver", "Details", "tblCargoAgendas", routeValues: new { id = item.lCargoAgenda_id }, htmlAttributes: new { data_modal = "", @class = "glyphicon" })
                &nbsp;
                @Html.NoEncodeActionLink("<span class='glyphicon glyphicon-trash'></span>", "Eliminar", "Delete", "tblCargoAgendas", routeValues: new { id = item.lCargoAgenda_id }, htmlAttributes: new { data_modal = "", @class = "glyphicon" })
            </div>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.agenda.NombreCompleto)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.tblCargo.sDescripcion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.dtFechaInicio_dt)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.dtFechaFinal_dt)
        </td>                
    </tr>
}

</table>
