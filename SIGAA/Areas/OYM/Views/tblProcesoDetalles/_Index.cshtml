                    @Html.DisplayFor(modelItem => item.lRevision1)
                </td>
                @*<td>
                    @Html.DisplayFor(modelItem => item.lRevision2)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.lRevision3)
