@using SIGAA.Areas.OYM.Helpers
@model IEnumerable<SIGAA.Areas.OYM.Models.tblTipoDocumento>

@{
    ViewBag.Title = "Tipos de Documentos";
}

<h2>Tipos de Documentos</h2>

<table class="table">
    <tr>
        <th>
            <div class="pull-left">
                @Html.NoEncodeActionLink("<span class='glyphicon glyphicon-plus'></span>", "Crear Nuevo", "Create", "tblTipoDocumentos", routeValues: null, htmlAttributes: new { @class = "btn btn-primary" })
            </div>
        </th>
        <th>
            @Html.DisplayNameFor(model => model.sSigla)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.sTipoDocumento)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.sDescripcion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.bActivo)
        </th>        
    </tr>

@foreach (var item in Model) {
    <tr>
        <td style="width:68px">
            <div class="pull-left" style="width:68px">
                @if (FrontUser.TienePermiso(RolesPermisos.OYM_tipoDeDocumento_puedeEditar)) {
                @Html.NoEncodeActionLink("<span class='glyphicon glyphicon-pencil'></span>", "Editar", "Edit", "tblTipoDocumentos", routeValues: new { id = item.lTipoDocumento_id }, htmlAttributes: new { data_modal = "", @class = "glyphicon" })}
                &nbsp;
                @if (FrontUser.TienePermiso(RolesPermisos.OYM_tipoDeDocumento_puedeVerDetalle)) {
                @Html.NoEncodeActionLink("<span class='glyphicon glyphicon-search'></span>", "Ver", "Details", "tblTipoDocumentos", routeValues: new { id = item.lTipoDocumento_id }, htmlAttributes: new { data_modal = "", @class = "glyphicon" })}
                &nbsp;
                @if (FrontUser.TienePermiso(RolesPermisos.OYM_tipoDeDocumento_puedeEliminar)) {
                @Html.NoEncodeActionLink("<span class='glyphicon glyphicon-trash'></span>", "Eliminar", "Delete", "tblTipoDocumentos", routeValues: new { id = item.lTipoDocumento_id }, htmlAttributes: new { data_modal = "", @class = "glyphicon" })}
            </div>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.sSigla)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.sTipoDocumento)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.sDescripcion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.bActivo)
        </td>
        
    </tr>
}

</table>
