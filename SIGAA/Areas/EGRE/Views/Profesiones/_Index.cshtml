@using MvcFlash.Core.Extensions
@model IEnumerable<SIGAA.Areas.EGRE.Models.gatbl_Profesiones>

<div id="listaProfesiones">
    @Html.Flash()
    <table class="table small">
        <tr class="active">
            <th class="col-md-1">Operaciones</th>
            <th>
                @Html.DisplayNameFor(model => model.sNombre_nm)
            </th>
            @*<th>
                @Html.DisplayNameFor(model => model.iEstado_fl)
            </th>*@
 
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @if (FrontUser.TienePermiso(RolesPermisos.EGRE_profesionTutor_puedeEditar)) {
                    <a href="/EGRE/Profesiones/Edit/@item.iProfesion_id"><span class="glyphicon glyphicon-pencil" data-toggle="tooltip" data-original-title="Editar"></span></a>} |
                    @if (FrontUser.TienePermiso(RolesPermisos.EGRE_profesionTutor_puedeVerDetalle)) {
                    <a href="/EGRE/Profesiones/Details/@item.iProfesion_id"><span class="glyphicon glyphicon-eye-open" data-toggle="tooltip" data-original-title="Ver detalle"></span></a>} |
                    @if (FrontUser.TienePermiso(RolesPermisos.EGRE_profesionTutor_puedeEliminar))
                    {<a href="/EGRE/Profesiones/Delete/@item.iProfesion_id"><span class="glyphicon glyphicon-trash" data-toggle="tooltip" data-original-title="Eliminar"></span></a>}
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.sNombre_nm)
                </td>
                @*<td>
                    @Html.DisplayFor(modelItem => item.iEstado_fl)
                </td>*@
            </tr>
        }
    </table>
</div>

<script type="text/javascript">
$(document).ready(function(){
    $('[data-toggle="tooltip"]').tooltip({
        placement : 'top'
    });
});
</script>