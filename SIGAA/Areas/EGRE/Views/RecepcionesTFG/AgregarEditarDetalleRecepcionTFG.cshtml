
@model SIGAA.Areas.EGRE.Models.gatbl_DRecepcionesTFG
@{
    ViewBag.Title = "CrearDetalleRecepcionTFG";
}

<h2>Agregar</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal small form-group-sm">
        <h4>Detalle Observaciones TFG</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(model => model.sTipoObs_fl, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EnumDropDownListFor(model => model.sTipoObs_fl, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.sTipoObs_fl, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.sObsCorta, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.sObsCorta, new { htmlAttributes = new { @class = "form-control", @placeholder = "Observación corta" } })
                @Html.ValidationMessageFor(model => model.sObsCorta, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.sObsDetallada, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.sObsDetallada, new { htmlAttributes = new { @class = "form-control", @placeholder = "Observación detallada" } })
                @Html.ValidationMessageFor(model => model.sObsDetallada, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.sSugerencias, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.sSugerencias, new { htmlAttributes = new { @class = "form-control", @placeholder = "Sugerencias" } })
                @Html.ValidationMessageFor(model => model.sSugerencias, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" id="AgregarObservacionTFG" value="Agregar Observación" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<div>
    @*// @Html.ActionLink("Volver", "Index")*@
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}