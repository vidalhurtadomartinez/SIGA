@using MvcFlash.Core.Extensions
@model IEnumerable<SIGAA.Areas.EGRE.Models.gatbl_AreasAdministrativas>

<div id="listaAreasAdministrativas">
    @Html.Flash()
    <table class="table small">
        <tr class="active">
            <th class="col-md-1">Operaciones</th>
            <th>
                @Html.DisplayNameFor(model => model.sNombre_nm)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.sUbicacion_desc)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.sTelefono_desc)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.sCoordinador_nm)
            </th>
            @*<th>
                @Html.DisplayNameFor(model => model.iEstado_fl)
            </th>*@

      
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @if(FrontUser.TienePermiso(RolesPermisos.EGRE_areaAdministrativa_puedeEditar)){
                    <a href="/EGRE/AreaAdministrativa/Edit/@item.iAreaAdministrativa_id"><span class="glyphicon glyphicon-pencil" data-toggle="tooltip" data-original-title="Editar"></span></a>} |
                    @if (FrontUser.TienePermiso(RolesPermisos.EGRE_areaAdministrativa_puedeVerDetalle)) {
                    <a href="/EGRE/AreaAdministrativa/Details/@item.iAreaAdministrativa_id"><span class="glyphicon glyphicon-eye-open" data-toggle="tooltip" data-original-title="Ver detalle"></span></a>} |
                    @if (FrontUser.TienePermiso(RolesPermisos.EGRE_areaAdministrativa_puedeEliminar)) {
                    <a href="/EGRE/AreaAdministrativa/Delete/@item.iAreaAdministrativa_id"><span class="glyphicon glyphicon-trash" data-toggle="tooltip" data-original-title="Eliminar"></span></a>}

                    @*<span class="glyphicon glyphicon-pencil"></span>
            @Html.ActionLink("e", "Edit", new { id = item.iAreaAdministrativa_id }) |
            <span class="glyphicon glyphicon-eye-open"></span>
            @Html.ActionLink("v", "Details", new { id = item.iAreaAdministrativa_id }) |
            <span class="glyphicon glyphicon-trash"></span>
            @Html.ActionLink("b", "Delete", new { id = item.iAreaAdministrativa_id })*@
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.sNombre_nm)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.sUbicacion_desc)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.sTelefono_desc)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.sCoordinador_nm)
                </td>
                @*<td>
                    @Html.DisplayFor(modelItem => item.iEstado_fl)
                </td>*@


            </tr>
        }
    </table>
</div>

<script type="text/javascript">
$(document).ready(function(){
    $('[data-toggle="tooltip"]').tooltip({
        placement : 'top'
    });
});
</script>