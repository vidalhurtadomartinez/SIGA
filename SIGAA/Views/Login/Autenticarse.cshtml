@using MvcFlash.Core.Extensions
@model SIGAA.ViewModels.LoginViewModel
@{
    ViewBag.Title = "Iniciar sesión";
}
<br />
<br />
@*<h2>@ViewBag.Title.</h2>*@
<div class="row">
    <div class="col-md-8">
        <div id="loginForm" class="panel panel-default">
            <div class="panel-heading">
                <h1>@ViewBag.Title.</h1>
            </div>
            <div class="panel-body">
                @using (Html.BeginForm("Autenticarse", "Login", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.AntiForgeryToken()
                    @Html.Flash()
                    <div class="form-group">
                        @Html.LabelFor(m => m.EmailUtepsa, new { @class = "col-md-2 control-label" })
                        <div class="col-md-8">
                            @Html.TextBoxFor(m => m.EmailUtepsa, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.EmailUtepsa, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Contrasena, new { @class = "col-md-2 control-label" })
                        <div class="col-md-8">
                            @Html.PasswordFor(m => m.Contrasena, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Contrasena, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <button type="submit" class="btn btn-primary"><span class="glyphicon glyphicon-log-in"></span> INICIAR SESIÓN</button>
                            @*//<input type="submit" value="Iniciar sesión" class="btn btn-success" />*@
                        </div>
                    </div>
                }

            </div>
            <div class="alert alert-success">
                @Html.Partial("_Autenticarse")
            </div>          
        </div>
    </div>  
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}