@using MvcFlash.Core.Extensions
@model SIGAA.Models.Permiso

@{
    ViewBag.Title = "Editar";
}
<h3><b>Editar Permiso</b></h3>
<hr />
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.Flash()
        @Html.HiddenFor(model => model.iPermiso_id)

        <div class="form-group form-group-sm">
            @Html.LabelFor(model => model.iPermiso_id, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-5">
                 @Html.DropDownListFor(model => model.iPermiso_id,null,"[SELECCIONE UNA OPCION]",htmlAttributes: new { @class = "form-control", @disabled = "disabled" })
                @Html.ValidationMessageFor(model => model.iPermiso_id, "", new { @class = "text-danger" })
            </div>
        </div>

        @Html.Partial("_CreateEdit", Model)
        @*<hr />*@
        <div class="col-md-offset-2">
            <button type="submit" class="btn btn-primary"><span class="glyphicon glyphicon-edit"></span> Editar</button>
            <a href=@Url.Action("Index","Permiso") class="btn btn-default"><span class="glyphicon glyphicon-list"></span> Ir a Lista </a>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
